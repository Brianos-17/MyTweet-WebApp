
{{#each tweet}}
    <table class="ui fixed centre aligned table">
        <thead>
        <tr>
            <th class="one wide"> User </th>
            <th class="six wide"> Tweet </th>
            <th class="two wide"> Date </th>
        </tr>
        </thead>
        <tbody>
        <div class="ui bulleted list">
            <tr>
                <td><a href="/viewUser/{{user._id}}">{{user.firstName}} {{user.lastName}}</a></td>
                <td>{{message}}</td>
                <td>{{date}}</td>
            </tr>
        </div>
        </tbody>
    </table>
{{/each}}
