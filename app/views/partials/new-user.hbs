
<form class="ui stacked segment form" name="addNewUser" action="/register/{{userType}}" method="POST"
      onsubmit="return validatePassword()">
    <div class="three fields">
        <div class="required field">
            <label> First Name </label>
            <input placeholder="Name..." type="text" name="firstName">
        </div>
        <div class="required field">
            <label> Last Name </label>
            <input placeholder="Name..." type="text" name="lastName">
        </div>
        <div class="required field">
            <label> Email </label>
            <input placeholder="E-mail Address..." type="email" name="email" required>
        </div>
    </div>
    <div class="three fields">
        <div class="required field">
            <label> Password </label>
            <input placeholder="Password..." type="password" name="password" required>
        </div>
        <div class="required field">
            <label> Password Validation </label>
            <input placeholder="Please enter the same password as above..." type="password" name="passwordValid">
        </div>
    </div>
    <button class="ui blue submit button"> Add User </button>
</form>

<script>
    function validatePassword() {
        var passwordValid = document.forms["addNewUser"]["passwordValid"].value;
        var password = document.forms["addNewUser"]["password"].value;
        if(passwordValid !== password) {
            alert("Your password validation must match your password");
            return false;
        }
    }
</script>