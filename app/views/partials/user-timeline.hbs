
{{#each tweet}}
    <table class="ui fixed centre aligned table">
        <thead>
        <tr>
            <th class="one wide"> User Icon </th>
            <th class="six wide"> Tweet </th>
            <th class="two wide"> Date </th>
            {{#unless ../globalTimeline}}
                    <th class="one wide"> Delete </th>
            {{/unless}}
        </tr>
        </thead>
        <tbody>
        <div class="ui bulleted list">
            <tr>
                <td>Test</td>
                <td>{{message}}</td>
                <td>{{date}}</td>
                {{#unless ../globalTimeline}}
                    <td>
                        <a href="/removeTweet/{{id}}">
                        <i class=" large red trash icon"></i>
                        </a>
                        <div class="ui middle aligned checkbox">
                            <input type="checkbox" name="example">
                            <label></label>
                        </div>
                    </td>
                {{/unless}}
            </tr>
        </div>
        </tbody>
    </table>
{{/each}}
{{#unless globalTimeline}}
    <div>
        <button class="ui red disabled button" id="deleteSet">Delete</button>
    </div>
    {{> deleteSet}}
{{/unless}}