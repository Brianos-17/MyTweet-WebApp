
{{#each tweet}}
    <table class="ui fixed centre aligned table">
        <thead>
        <tr>
            {{#if ../globalTimeline}}
                <th class="one wide"> User </th>
            {{/if}}
            <th class="six wide"> Tweet </th>
            <th class="two wide"> Date </th>
            {{#if ../globalTimeline}}
                <th class="one wide"> Follow </th>
            {{else}}
                <th class="one wide"> Delete </th>
            {{/if}}
        </tr>
        </thead>
        <tbody>
        <div class="ui bulleted list">
            <tr>
                {{#if ../globalTimeline}}
                    <td><a href="/viewUser/{{user._id}}">
                        <img class="ui tiny avatar image" src="/getProfilePic/{{user._id}}"
                             onerror="this.src = 'http://res.cloudinary.com/dlswdhwpl/image/upload/v1503513638/accounts-page_vs2sh7.png';">
                    </a></td>
                {{/if}}
                <td>
                    <p>{{message}}</p>
                        <p><img class="ui medium image" src="/getTweetImg/{{_id}}"/></p>
                </td>
                <td>{{date}}</td>
                {{#unless ../globalTimeline}}
                    <td>
                        <a href="/removeTweet/{{id}}">
                            <i class=" large red trash icon"></i>
                        </a>
                    </td>
                {{/unless}}
                {{#if ../globalTimeline}}
                    <td><a href="/followUser/{{user._id}}"><i class="large add user icon" /></a></td>
                {{/if}}
            </tr>
        </div>
        </tbody>
    </table>
{{/each}}
{{#unless globalTimeline}}
    <form name="deleteSet"  action="/deleteAll/{{user._id}}" method="GET">
    <div class="ui grid">
        <div class="fourteen wide column"></div>
        <div class="one wide right aligned column" >
            <button class="ui red button" id="deleteSet">Delete All</button>
        </div>
    </div>
    </form>
{{/unless}}
